{
  "name": "customer-query",
  "version": "1.0.0",
  "description": "Microservice, query layer of a CQRS event sourcing architecture",
  "main": "index.js",
  "scripts": {
    "babel-node": "babel-node",
    "test": "mocha ./src/**/**.spec.js --require @babel/register",
    "clean": "rm -rf build && mkdir build",
    "build-app": "yarn clean && yarn cache clean && yarn && babel ./app.js --out-file ./build/app.js",
    "build-server": "yarn build-app && babel src -d ./build/src",
    "start": "yarn test && yarn build-server && node ./build/app.js",
    "dev": "nodemon --exec npm run babel-node -- ./app.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "nodemon": "^1.18.5"
  },
  "dependencies": {
    "elasticsearch": "^15.1.1",
    "express": "^4.16.4",
    "kafka-node": "^3.0.1",
    "pretty-logger": "^0.1.2"
  }
}
